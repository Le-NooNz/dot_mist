;=====================================================
;
;   To learn more about how to configure Polybar
;   go to https://github.com/jaagr/polybar
;
;   The README contains alot of information
;
;=====================================================

[colors]
background = #B0000000
background-alt = #30000000
foreground = #bbeeeeee
foreground-alt = #55
primary = #ffb52a
secondary = #e60053
alert = #40bd2c40

[global/wm]
margin-top = 5
margin-bottom = 5
enable-ipc = true

;==========================
;	Bottom bar
;==========================

[bar/bardown]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 20
offset-x = 0
offset-y = 0
bottom=true

;background = ${xrdb:color9}
background = ${colors.background}
foreground = ${colors.foreground}

; Opacity value between 0.0 and 1.0 used on fade in/out
dim-value = 0.5

overline-size = 2
overline-color = #f00
underline-size = 2
underline-color = #00f

border-bottom = 2
border-bottom-color = #333

spacing = 1
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = hack:size=10:fontformat=fontawesome:pixelsize=10;0
font-1 = fontawesome:pixelsize=12;0

modules-left = cCRCERcri3 
modules-center = date
modules-right = powermenu

separator = "|"

;==========================
;	Upper bar
;==========================

[bar/barup]
width = 100%
height = 20
offset-x = 0
offset-y = 0
bottom=false

;background = ${xrdb:color9}
background = ${colors.background}
foreground = ${colors.foreground}

overline-size = 5
overline-color = #f00
underline-size = 2
underline-color = #f00

border-bottom = 5
border-bottom-color = #000

spacing = 1
padding-left = 2
padding-right = 2
module-margin-left = 1
module-margin-right = 1

font-0 = hack:size=10:fontformat=fontawesome:pixelsize=10;0
font-1 = fontawesome:pixelsize=12;0

modules-left = xwindow
modules-center = 
modules-right = cpu wlan eth battery temperature

separator = "|"

; Ne fonctionne pas
;spacing = 0

tray-position = right
tray-padding = 2
tray-transparent = false
tray-background = #000000

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

;==========================
;	Module xwindow
;==========================

[module/xwindow]
type = internal/xwindow

; Available tags:
;   <label> (default)
format-background = #C00070f0
format-foreground = #000
format-padding = 1

; Available tokens:
;   %title%
; Default: %title%
;label = %title:0:30:...%
label = %title%
label-maxlen = 25

;==========================
;	Module filesystem
;==========================

[module/filesystem]
type = internal/fs
interval = 25

mount-0 = /
mount-1 = /boot
;mount-2 = /invalid/mountpoint

label-mounted = %mountpoint%: %percentage_free%

label-unmounted = %mountpoint%: not mounted
label-unmounted-foreground = ${colors.foreground-alt}

; Available tags:
;   <label-mounted> (default)
;   <bar-free>
;   <bar-used>
;   <ramp-capacity>
format-mounted = <label-mounted>

; Available tags:
;   <label-unmounted> (default)
format-unmounted = <label-mounted>

; Available tokens:
;   %mountpoint%
;   %type%
;   %fsname%
;   %percentage_free%
;   %percentage_used%
;   %total%
;   %free%
;   %used%
; Default: %mountpoint% %percentage_free%
;label-mounted = %mountpoint%: %percentage_free% of %total%

;==========================
;	Module i3
;==========================

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

ws-icon-1 = 1;ÔÑ†
ws-icon-2 = 2;ÔÅÑ
ws-icon-3 = 3;Ôâ©
ws-icon-4 = 4;Ôáó
ws-icon-5 = 5;x
ws-icon-6 = 6;x
ws-icon-7 = 7;x
ws-icon-8 = 8;ÔÇÖ
ws-icon-9 = 9;ÔÇ≠
ws-icon-0 = 10;ÔÉ∂

; Available tokens:
;   %mode%
; Default: %mode%
label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.primary}

; Available tokens:
;   %name%
;   %icon%
;   %index%
;   %output%
; Default: %icon%

label-focused = %icon%
label-focused-background = ${module/bspwm.label-focused-background}
label-focused-underline = ${module/bspwm.label-focused-underline}
label-focused-padding = ${module/bspwm.label-focused-padding}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%

label-unfocused = %icon%
label-unfocused-padding = ${module/bspwm.label-occupied-padding}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%

label-urgent = %icon% !
label-urgent-background = ${module/bspwm.label-urgent-background}
label-urgent-padding = ${module/bspwm.label-urgent-padding}

; Available tokens:
;   %name%
;   %icon%
;   %index%
; Default: %icon%

label-visible = %icon%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

;==========================
;	Module cpu
;==========================

[module/cpu]
type = internal/cpu

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label> <ramp-coreload>

; Available tokens:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = CPU %percentage%

ramp-coreload-0 = ‚ñÅ
ramp-coreload-1 = ‚ñÇ
ramp-coreload-2 = ‚ñÉ
ramp-coreload-3 = ‚ñÑ
ramp-coreload-4 = ‚ñÖ
ramp-coreload-5 = ‚ñÜ
ramp-coreload-6 = ‚ñá
ramp-coreload-7 = ‚ñà

interval = 2
format-underline = #f90000

;==========================
;	Module network/wlan
;==========================

[module/wlan]
type = internal/network
interface = wlan0
interval = 3.0

; Available tags:
;   <label-connected> (default)
;   <ramp-signal>
format-connected = <label-connected> <ramp-signal> 
format-connected-underline = #9f78e1

; Available tags:
;   <label-disconnected> (default)
format-disconnected = <label-disconnected>
format-disconnected-underline = ${self.format-connected-underline}

; Available tags:
;   <label-connected> (default)
;   <label-packetloss>
;   <animation-packetloss>
format-packetloss = <animation-packetloss> <label-connected>

; Available tokens:
;   %ifname%    [wireless+wired]
;   %local_ip%  [wireless+wired]
;   %essid%     [wireless]
;   %signal%    [wireless]
;   %upspeed%   [wireless+wired]
;   %downspeed% [wireless+wired]
;   %linkspeed% [wired]
; Default: %ifname% %local_ip%
label-connected = "Ôá´ %essid% %local_ip%"
label-disconnected = "Ôá´ %ifname% disconnected"
label-disconnected-foreground = ${colors.foreground-alt}

; Only applies if <ramp-signal> is used
ramp-signal-0 = üò±
ramp-signal-1 = üò†
ramp-signal-2 = üòí
ramp-signal-3 = üòä
ramp-signal-4 = üòÉ
ramp-signal-5 = üòà
ramp-signal-foreground = ${colors.foreground-alt}

; Only applies if <animation-packetloss> is used
animation-packetloss-0 = ‚ö†
animation-packetloss-0-foreground = #ffa64c
animation-packetloss-1 = üì∂
animation-packetloss-1-foreground = #000000

; Framerate in milliseconds
animation-packetloss-framerate = 500

;==========================
;	Module network/eth
;==========================

[module/eth]
type = internal/network
interface = eth0
interval = 3.0

format-connected-underline = #55aa55
format-connected-foreground-foreground = ${colors.foreground-alt}
label-connected = "ÔÅΩ %local_ip%"

format-disconnected-underline = ${self.format-connected-underline}
label-disconnected = "ÔÅΩ %ifname%"
label-disconnected-foreground = ${colors.foreground-alt}

;==========================
;	Module date
;==========================

[module/date]
type = internal/date
interval = 5

date = "%d-%m-%Y"
;date-alt = "%d-%m-%Y"

time = %H:%M
;time-alt = %H:%M:%S

; Available tags:
;   <label> (default)
format = <label>
format-background = #000000
format-foreground = #fff

; Available tokens:
;   %date%
;   %time%
; Default: %date%
label = "ÔÄó %date% %time%"
label-font = 10
label-foreground = #9A32DB

format-underline = #0a6cf5

;==========================
;	Module battery
;==========================

[module/battery]
type = internal/battery

; This is useful in case the battery never reports 100% charge
full-at = 99

; Use the following command to list batteries and adapters:
; $ ls -1 /sys/class/power_supply/
battery = BAT0
adapter = ADP1

format-charging = <animation-charging> <label-charging>
format-charging-underline = #ffb52a

format-discharging = <ramp-capacity> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix-foreground = ${colors.foreground-alt}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = ÔâÑ
ramp-capacity-1 = ÔâÉ
ramp-capacity-2 = ÔâÇ
ramp-capacity-3 = ÔâÅ
ramp-capacity-4 = ÔâÄ
ramp-capacity-foreground = ${colors.foreground-alt}

animation-charging-0 = ÔâÑ
animation-charging-1 = ÔâÉ
animation-charging-2 = ÔâÇ
animation-charging-3 = ÔâÅ
animation-charging-4 = ÔâÄ
animation-charging-foreground = #ffb52a 
animation-charging-framerate = 750

;==========================
;	Module temperature
;==========================

[module/temperature]
type = internal/temperature

; Seconds to sleep between updates
; Default: 1
interval = 0.5

; Thermal zone to use
; To list all the zone types, run 
; $ for i in /sys/class/thermal/thermal_zone*; do echo "$i: $(<$i/type)"; done
; Default: 0
thermal-zone = 1

; Threshold temperature to display warning label
; Default: 80
warn-temperature = 65

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature%
label-warn = %temperature%
label-warn-foreground = ${colors.secondary}

ramp-0 = Ôãã
ramp-1 = Ôãâ
ramp-2 = Ôãá
ramp-foreground = #f50a4d

;==========================
;	Module powermenu
;==========================

[module/powermenu]
type = custom/menu

label-open = ÔÄë power
label-open-foreground = ${colors.secondary}
label-close = ÔÅû cancel
label-close-foreground = ${colors.secondary}
label-separator = |
label-separator-foreground = ${colors.foreground-alt}

menu-0-0 = reboot
menu-0-0-exec = menu-open-1
menu-0-1 = power off
menu-0-1-exec = menu-open-2

menu-1-0 = cancel
menu-1-0-exec = menu-open-0
menu-1-1 = reboot
menu-1-1-exec = gksudo reboot

menu-2-0 = power off
menu-2-0-exec = gksudo poweroff
menu-2-1 = cancel
menu-2-1-exec = menu-open-0