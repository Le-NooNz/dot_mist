# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart

# resize window (you can also use the mouse for that)
set $mode_resize resize
bindsym $mod+r mode "$mode_resize"
mode "$mode_resize" {
    bindsym Left resize shrink width 10 px or 1 ppt
    bindsym Down resize grow height 10 px or 1 ppt
    bindsym Up resize shrink height 10 px or 1 ppt
    bindsym Right resize grow width 10 px or 1 ppt

    bindsym Shift+Left resize shrink width 20 px or 5 ppt
    bindsym Shift+Down resize grow height 20 px or 5 ppt
    bindsym Shift+Up resize shrink height 20 px or 5 ppt
    bindsym Shift+Right resize grow width 20 px or 5 ppt

    bindsym 1 mode "default", resize set 500 300
    bindsym 2 mode "default", resize set 600 360
    bindsym 3 mode "default", resize set 768 480

    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# An excellent alternative to the default i3 exit keybind.
# From https://wiki.archlinux.org/index.php/i3#Shutdown.2C_reboot.2C_lock_screen
set $locker exec ~/scripts/screen_lock.sh && sleep 1

#bindsym $mod+Pause mode "$mode_system"
set $mode_system System (l) lock, (r) reboot, (Shift+s) shutdown
bindsym $mod+F10 mode "$mode_system"
mode "$mode_system" {
    bindsym l exec --no-startup-id $locker, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym r exec --no-startup-id gksudo reboot, mode "default"
    bindsym Shift+s exec --no-startup-id gksudo shutdown, mode "default"

    # Back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Change wallpaper and terminal colour with wal
set $mode_wallpaper Wall (r) Reload, (n) Next
bindsym $mod+Shift+w mode "$mode_wallpaper"
mode "$mode_wallpaper" {
    bindsym r exec --no-startup-id ~/scripts/wal -r -t -q, mode "default"
    bindsym n exec --no-startup-id ~/scripts/wal_next.sh

    # Back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# Definition des gaps
gaps inner 10
gaps outer 5
smart_gaps on

# Nouvelles fenetres avec bordures 2 pixels et pas de barre de titre
new_window none

## Brutal Logout
bindsym $mod+Shift+l exec "i3-msg exit"

## Verrouillage ecran
#
# Windows+l
bindsym $mod+l exec ~/scripts/screen_lock.sh
#
# Change Wallpaper
bindsym $mod+m exec --no-startup-id ~/scripts/wal_next.sh
# Verrouillage Auto (10 minutes)
exec --no-startup-id xautolock \
-time 10 \
-locker ~/scripts/screen_lock.sh \
-notify 10 \
-notifier "notify-send LOCKING 'in 10 seconds' -u normal -t 10000 -i /usr/share/icons/Vibrancy-Kali-Full-Dark/actions/scalable/gnome-lockscreen.svg" \
&

